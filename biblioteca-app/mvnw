# OS specific support.
cygwin=false
darwin=false
mingw=false
case "`uname`" in
  CYGWIN*) cygwin=true ;;
  DARWIN*) darwin=true ;;
  MINGW*) mingw=true ;;
esac

# Attempt to set APP_HOME
PRG="$0"
cd -P "$(dirname "$PRG")" >/dev/null
APP_HOME="$(pwd -P)"

CLASSPATH="$APP_HOME/.mvn/wrapper/maven-wrapper.jar"

MAVEN_PROJECTBASEDIR="${MAVEN_BASEDIR:-"$APP_HOME"}"
MAVEN_OPTS="$(concat_lines "$MAVEN_OPTS") $MAVEN_PROJECTBASEDIR_PROPS"

EXECUTABLE="$APP_HOME/.mvn/wrapper/maven-wrapper.jar"
if ! [ -x "$EXECUTABLE" ]; then
    echo "ERROR: Maven wrapper not found at $EXECUTABLE"
    exit 1
fi

CLASS_PATH="$APP_HOME/.mvn/wrapper:$CLASSPATH"
WRAPPER_LAUNCHER="org.apache.maven.wrapper.MavenWrapperMain"

exec java -classpath "$CLASS_PATH" -Dmaven.home="$APP_HOME/.mvn/wrapper" -Dclassworlds.conf="$APP_HOME/.mvn/wrapper/m2.conf" -Dmaven.multiModuleProjectDirectory="$MAVEN_PROJECTBASEDIR" "$WRAPPER_LAUNCHER" "$@"
